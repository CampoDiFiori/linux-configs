# change window focus within space

lalt - j : yabai -m window --focus south || yabai -m display --focus south
lalt - k : yabai -m window --focus north || yabai -m display --focus north
lalt - h : yabai -m window --focus west || yabai -m display --focus west
lalt - l : yabai -m window --focus east || yabai -m display --focus east

# Modifying window size

# shift + lalt - l : yabai -m window --space next
# shift + lalt - h : yabai -m window --space prev

shift + lalt - 1 : yabai -m window --space 1
shift + lalt - 2 : yabai -m window --space 2
shift + lalt - 3 : yabai -m window --space 3
shift + lalt - 4 : yabai -m window --space 4
shift + lalt - 5 : yabai -m window --space 5
shift + lalt - 6 : yabai -m window --space 6
shift + lalt - 7 : yabai -m window --space 7
shift + lalt - 8 : yabai -m window --space 8

shift + lalt - l : yabai -m window --space next && yabai -m display --focus next
shift + lalt - h : yabai -m window --space prev && yabai -m display --focus prev

# cmd - return : open -na /Applications/iTerm.app
cmd - return : open -na /Applications/Alacritty.app

shift + lalt - left : yabai -m window --resize right:-20:0 2> /dev/null || yabai -m window --resize left:-20:0 2> /dev/null
shift + lalt - down : yabai -m window --resize bottom:0:20 2> /dev/null || yabai -m window --resize top:0:20 2> /dev/null
shift + lalt - up : yabai -m window --resize bottom:0:-20 2> /dev/null || yabai -m window --resize top:0:-20 2> /dev/null
shift + lalt - right : yabai -m window --resize right:20:0 2> /dev/null || yabai -m window --resize left:20:0 2> /dev/null
